%h1 New wardrobe item

= form_for @wardrobe_item do |f|
  .field
    = f.label :garment
    = f.text_field :garment
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :season
    = f.text_field :season
  .field
    = f.label :color
    = f.text_field :color
  .actions
    = f.submit 'Save'